  --weui-FG-0: rgba(0, 0, 0, .9);
  --weui-FG-HALF: rgba(0, 0, 0, .9);
  --weui-FG-1: rgba(0, 0, 0, .5);
  --weui-FG-2: rgba(0, 0, 0, .3);
  --weui-FG-3: rgba(0, 0, 0, .1);
  --weui-RED: #fa5151;
  --weui-ORANGE: #fa9d3b;
  --weui-YELLOW: #ffc300;
  --weui-GREEN: #91d300;
  --weui-LIGHTGREEN: #95ec69;
  --weui-BRAND: #07c160;
  --weui-BLUE: #10aeff;
  --weui-INDIGO: #1485ee;
  --weui-PURPLE: #6467f0;
  --weui-WHITE: #fff;

@import "../../common/common-wxss/index.wxss";
page{
  background-color: #f4f4f4;
}
.mian{
  position: relative;
}
.main_top{
  position: relative;
  width: 750rpx;
  height: 500rpx;
  background-image: url("https://gw.alicdn.com/imgextra/i2/O1CN01MichFe26jHW53p3Ew_!!6000000007697-0-tps-750-500.jpg");
  background-size: cover;
}
.main_top_bg{
  width: 100%;
  height: 100%;
}
.main_top_avatar{
  position: absolute;
  left: 26rpx;
  bottom: 120rpx;
  width: 120rpx;
  height: 120rpx;
  overflow: hidden;
  border-radius: 60rpx;
}
.main_top_avatar_icon{
  width: 100%;
  height: 100%;
}
.main_top_nick{
  position: absolute;
  bottom: 190rpx;
  left: 190rpx;
  font-size: 34rpx;
  color: #ffffff;
}
.main_top_basic{
  position: absolute;
  bottom: 140rpx;
  left: 190rpx;
  color: #ffffff;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.main_top_edit{
  width: 26rpx;
  height: 26rpx;
}

.main_content{
  position: relative;
  padding-top: 40rpx;
}

.main_parents{
  position: relative;
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  padding-top: 10rpx;
}
.main_parents_head{
  width: 120rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 30rpx;
  color: #000000;
}

.main_parents_avatar_icon{
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}
.main_parents_love{
  position: relative;
  width: auto;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: -40rpx;
}
.main_parents_love_line{
  width: 40rpx;
  height: 7rpx;
}
.main_parents_love_icon{
  width: 60rpx;
  height: 48rpx;
  margin: 0 20rpx;
}
.main_parents_love_rline{
  width: 40rpx;
  height: 7rpx;
  transform: scaleX(-1);
}
.share_btn{
  position: absolute;
  top: 0;
  width: 100%;
  height: 100%;
  opacity: 0;
}